<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:backgroundTint="@color/teal_200"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etg"
        android:layout_width="131dp"
        android:layout_height="61dp"
        android:layout_marginTop="252dp"
        android:background="#ED6090"
        android:ems="10"
        android:hint="Gram"
        android:inputType="textPersonName"
        android:textColorHint="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etkg"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="252dp"
        android:background="#DF5E8A"
        android:ems="10"
        android:hint="KiloGram"
        android:inputType="textPersonName"

        android:textColorHint="#E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntog"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="148dp"
        android:text="to gram"
        android:background="@drawable/custom_button"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etg" />

    <Button
        android:id="@+id/btntokg"
        android:layout_width="131dp"
        android:layout_height="65dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/custom_button"
        android:text="to kilogram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etkg" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="406dp"
        android:layout_height="218dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>